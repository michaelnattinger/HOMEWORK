function [tay_sim,y0] = taylor_sim(mod,lin,ss,T,t0,y0)
% 1. solve for c_1,c_2
c_1 = 0; % Nonexplosive soln
c_2 = (y0(1) - ss.y.k)/(lin.eigvecs(1,2)*lin.eigvals(2,2)^(t0));
y0(2) = c_2*lin.eigvecs(2,2)*lin.eigvals(2,2)^(t0) + ss.y.c;
t = t0:T;
tay_sim = zeros(length(y0),length(t));
count = 1;
for tt=t
    tay_sim(:,count) = (lin.eigvecs .* [c_1 c_2]) + [ss.y.k ; ss.y.c];
    count = count+1;
end